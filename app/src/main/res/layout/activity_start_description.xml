<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#b39ddb"
    tools:context="com.example.user1.nfctagapp.StartDescriptionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/description_startpage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#bcaaa4"
        android:text="Start the Hunt"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:onClick="gotoCurrentClueActivity"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:src="@drawable/nfc_tag"
        android:scaleType="centerCrop"/>

</LinearLayout>
